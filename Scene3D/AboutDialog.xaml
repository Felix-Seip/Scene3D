<Window x:Class="Scene3D.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scene3D"
        mc:Ignorable="d"
        Title="About Dialog" Height="220.083" Width="310.496" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="AboutHeading" Content="About Scene3D" HorizontalAlignment="Left" Margin="16,20,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="13.333" FontFamily="Arial"/>
        <TextBlock x:Name="AboutInfo" HorizontalAlignment="Left" Margin="30,63,0,0" TextWrapping="Wrap" Text="Scene 3D was created by Felix Seip. It uses mathematical concepts to render 3D objects on a 2D canvas. It is a school project created for learning purposes. Enjoy! :D" VerticalAlignment="Top" Height="73" Width="247"/>
        <TextBlock x:Name="documentationLink" HorizontalAlignment="Left" Margin="30,148,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PreviewMouseDown="OnDocumentationClick">
            <Hyperlink >
                 Documentation
            </Hyperlink>
        </TextBlock>

    </Grid>
</Window>
